<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="{{ asset('bundles/algernonleitner/css/main.css') }}" type="text/css" media="all" >
        <script src="{{ asset('bundles/algernonleitner/js/mootools-core-1.3.1-full-nocompat.js')}}" type="text/javascript"></script>
        <script src="{{ asset('bundles/algernonleitner/js/mootools-more-1.3.1.1.js')}}" type="text/javascript"></script>
        <script src="{{ asset('bundles/algernonleitner/js/algernon.js')}}" type="text/javascript"/></script>
        <title>{% block title %}Algernon{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link href='http://fonts.googleapis.com/css?family=Cabin' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
              Algernon
            </div>
            {% if app.session.flash('notice') %}
                <div class="flash-message">
                    <em>Notice</em>: {{ app.session.flash('notice') }}
                </div>
            {% endif %}
            <div id="content">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
